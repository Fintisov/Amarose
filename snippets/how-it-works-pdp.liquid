{{ 'how-it-works-pdp.css' | asset_url | stylesheet_tag }}

<link rel="stylesheet" href="{{ 'how-it-works-pdp.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="how-it-works-pdp">
