{% if section.settings.is_product == 'false' %}
  {% render 'video-image_block',
    id: section.id,
    cover_image: section.settings.cover_image,
    heading: section.settings.heading,
    text: section.settings.text,
    video_url: section.settings.video_url,
    description: section.settings.description
  %}
{% else %}
  {% render 'video-image_block',
    id: section.id,
    heading: section.settings.heading,
    text: section.settings.text,
    video_url: section.settings.video_url,
    description: section.settings.description,
    cover_image: product.metafields.video_image_block.image
   %}
{% endif %}

<div>{% section.settings.cover_image %}</div>

{% schema %}
{
  "name": "t:sections.video-image_block.name",

  "settings": [
    {
      "type": "text",
      "id": "heading",
      "default": "Formulated to provide skin nutrition for optimal skin health.",
      "label": "t:sections.video-image_block.settings.heading.label"
    },
    {
      "type": "textarea",
      "id": "text",
      "default": "A clean beauty solution that delivers nutrients to preserve and enhance your best skin.",
      "label": "t:sections.video-image_block.settings.text.label"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "t:sections.video-image_block.settings.cover_image.label"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": [
        "youtube",
        "vimeo"
      ],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "label": "t:sections.video-image_block.settings.video_url.label",
      "placeholder": "t:sections.video-image_block.settings.video_url.placeholder",
      "info": "t:sections.video-image_block.settings.video_url.info"
    },
    {
      "type": "text",
      "id": "description",
      "label": "t:sections.video-image_block.settings.description.label",
      "info": "t:sections.video-image_block.settings.description.info"
    },
    {
      "type": "checkbox",
      "id": "is_product",
      "default": false,
      "label": "t:sections.video-image_block.settings.enable_metafields.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.video-image_block.presets.name"
    }
  ]
}
{% endschema %}
