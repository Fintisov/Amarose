{{ 'component-question.css' | asset_url | stylesheet_tag }}
<noscript>{{ 'component-question.css' | asset_url | stylesheet_tag }}</noscript>


<section class="question-section">
  <div class="page-width">
    {% if section.settings.heading != blank and section.settings.content != blank %}
      <div class="question-section__text">
        {% if section.settings.heading != blank %}
          <h3 class="question-section__title">{{ section.settings.heading }}</h3>
        {% endif %}
        {{ section.settings.content }}
      </div>
    {% endif %}
    <div class="question-section__wrapper">
      {% if section.settings.button_url01 != blank and section.settings.button_text01 != blank %}
        <a href="#" class="button">
          {% if section.settings.button_svg01 != blank %}
            <div class="question__button-svg">
              {{ section.settings.button_svg01 }}
            </div>
          {% endif %}

          {{ section.settings.button_text01 }}
        </a>
      {% endif %}

      {% if section.settings.button_url02 != blank and section.settings.button_text02 != blank %}
        <a href="#" class="button">
          {% if section.settings.button_svg02 != blank %}
            <div class="question__button-svg">
              {{ section.settings.button_svg02 }}
            </div>
          {% endif %}

          {{ section.settings.button_text02 }}
        </a>
      {% endif %}
    </div>
  </div>
</section>


{% schema %}
{
  "name": "Question section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text01",
      "label": "Button Label"
    },
    {
      "type": "textarea",
      "id": "button_svg01",
      "label": "Button SVG"
    },
    {
      "type": "url",
      "id": "button_url01",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text02",
      "label": "Button Label"
    },
    {
      "type": "textarea",
      "id": "button_svg02",
      "label": "Button SVG"
    },
    {
      "type": "url",
      "id": "button_url02",
      "label": "Button Link"
    }
  ]
}
{% endschema %}
